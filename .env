# Web Scraping Configuration
# Copy this file to .env in the project root and modify as needed

# === Scraper Settings ===
# Rate limiting between requests (seconds) - Be respectful!
SCRAPER_RATE_LIMIT=1.0

# Maximum number of retry attempts for failed requests
SCRAPER_MAX_RETRIES=3

# Request timeout in seconds
SCRAPER_TIMEOUT=10

# Maximum pages to scrape (0 = no limit)
SCRAPER_MAX_PAGES=0

# Maximum concurrent requests (keep at 1 for respectful scraping)
SCRAPER_MAX_CONCURRENT=1

# === Database Configuration ===
# Database URL for storing scraped data (for future API integration)
DATABASE_URL=sqlite:///./data/books.db

# === API Configuration ===
# Base URL for the API server (for future integration)
API_BASE_URL=http://localhost:8000

# JWT Secret key for API authentication (change in production!)
JWT_SECRET_KEY=your-secret-key-change-this-in-production

# === Logging Configuration ===
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# === Advanced Settings ===
# User agent string override (leave empty to use defaults)
SCRAPER_USER_AGENT=

# Custom headers (JSON format)
SCRAPER_CUSTOM_HEADERS=

# Proxy settings (optional)
HTTP_PROXY=
HTTPS_PROXY=

# === Development Settings ===
# Enable debug mode
DEBUG=false

# Enable development features
DEVELOPMENT_MODE=false
