# =============================================================================
# ScrapBook Project - Environment Configuration Examples
# =============================================================================
# 
# This file contains example environment variables for the ScrapBook project.
# Copy this file to create separate .env files for different components:
#
# For API: cp .env.example .env.api
# For Scraper: cp .env.example .env.scraper
# For General: cp .env.example .env
#

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Server Settings
API_HOST=localhost
API_PORT=8000

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=sqlite:///./data/books.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_STORAGE_URI=memory://

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
SESSION_COOKIE_SECURE=False

# Logging Configuration
LOG_LEVEL=INFO

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================

# Rate Limiting and Request Settings
SCRAPER_RATE_LIMIT=1.0
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=10
SCRAPER_RETRY_DELAY=2.0
SCRAPER_MAX_PAGES=0
SCRAPER_MAX_CONCURRENT=1
SCRAPER_BATCH_SIZE=10

# Error Handling
SCRAPER_MAX_CONSECUTIVE_ERRORS=5
SCRAPER_ERROR_SLEEP_TIME=5.0

# Scraper Logging Configuration
SCRAPER_LOG_LEVEL=INFO

# =============================================================================
# GENERAL PROJECT CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=True

# Project Paths (relative to project root)
DATA_DIR=./data
LOGS_DIR=./data/logs
CSV_DIR=./data/csv
JSON_DIR=./data/json
